        <div name =""></div>
        <div>
            <input type="text" id="todoInput" />
            <div class="btn btn-success">Agregar</div>
        </div>
    </div>

    <script type="text/html" id="groupRowTempalte">
        <div>
            <input type="checkbox" name="name" value="" />
